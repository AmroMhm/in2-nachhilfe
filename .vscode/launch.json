{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "CMake Debug (Selected Target)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${command:cmake.launchTargetPath}", // ‚Üê dynamic target path
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb", // or lldb if on Mac
        "setupCommands": [
          {
            "description": "Enable pretty printing",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }
  